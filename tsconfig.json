{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@resources": [
        "./resources"
      ],
      "@resources/*": [
        "./resources/*"
      ],
      "@middlewares/*": [
        "./middlewares/*"
      ],
      "@utils/*": [
        "./utils/*"
      ],
      "@utils": [
        "./utils/"
      ],
      "@constants": [
        "./constants"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}